		@!component('components/script')
		<script>
			function oneDot(input) {				
				let value = input.value.toString()
				value = value.replace(/\D/g, '');
				let parts = value.replaceAll('.', '');
				console.log(parts)
				parts = parts.replace(/\B(?=(\d{3})+(?!\d))/g,'.');
				input.value = parts
			}
		</script>
		<!--end::Javascript-->
